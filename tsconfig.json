{
  "compilerOptions": {
		"declaration": true,
		"declarationDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": false,
    "noImplicitAny": true,
    "target": "es2022",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
	},
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
		"dist"
  ]
}
